@model GepjarmuCreateViewModel
@{
    ViewData["Title"] = "Új gépjármű felvétele";
}

<div class="body-container">
    <div class="body-title">@ViewData["Title"]</div>
    <div class="body-context">
        @using (Html.BeginForm("Create", "Gepjarmus", FormMethod.Post))
        {
            @Html.LabelFor(model => model.Tipus, new { @class = "labeltext" })<br />
            @Html.TextBoxFor(model => model.Tipus, new { @class = "textbox", placeholder = "Írja be a típust..." })<br /><br />

            @Html.LabelFor(model => model.Rendszam, new { @class = "labeltext" })<br />
            @Html.TextBoxFor(model => model.Rendszam, new { @class = "textbox", placeholder = "Írja be a rendszámot..." })<br /><br />

            @Html.LabelFor(model => model.Kategoria, new { @class = "labeltext" })<br />
            @Html.DropDownListFor(model => model.Kategoria, Html.GetEnumSelectList<Kategoria>(), new { @class = "combobox" })<br /><br />

            @Html.LabelFor(model => model.SzervizCiklus, new { @class = "labeltext" })<br />
            @Html.TextBoxFor(model => model.SzervizCiklus, new { @class = "textbox", placeholder = "Írja be a szervízciklust..." })<br /><br />

            @Html.LabelFor(model => model.FutottKm, new { @class = "labeltext" })<br />
            @Html.TextBoxFor(model => model.FutottKm, new { @class = "textbox", placeholder = "Írja be a futott kilométert..." })<br /><br />

            @Html.LabelFor(model => model.UtolsoSzerviz, new { @class = "labeltext" })<br />
            @Html.TextBoxFor(model => model.UtolsoSzerviz, new { @type = "date", @class = "textbox" })<br /><br />

            @Html.LabelFor(model => model.SelectedTelephelyCim, new { @class = "labeltext" })<br />
            @Html.DropDownListFor(model => model.SelectedTelephelyCim, new SelectList(Model.Telephelyek, "Value", "Text"), new { @class = "combobox" })<br /><br />

            <input type="submit" name="Save" value="Mentés" class="btn-submit" /><br />
        }
        <div style="text-align: right;">@Html.ActionLink("Vissza a listához", "Index", "Gepjarmus")</div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}